{
  "devDependencies": {
    "asar": "^0.13.0",
    "browserify": "^14.4.0",
    "chai": "^4.0.2",
    "electron": "1.7.4",
    "electron-builder": "^19.11.1",
    "electron-localshortcut": "^2.0.2",
    "fs-jetpack": "^1.1.0",
    "gulp": "^3.9.0",
    "gulp-batch": "^1.0.5",
    "gulp-less": "^3.0.3",
    "gulp-plumber": "^1.1.0",
    "gulp-util": "^3.0.6",
    "gulp-watch": "^4.3.5",
    "into-stream": "^3.1.0",
    "q": "^1.4.1",
    "redux-devtools": "^3.3.1",
    "rollup": "^0.43.0",
    "rollup-plugin-babel": "^2.6.1",
    "yargs": "^8.0.2"
  },
  "optionalDependencies": {
    "appdmg": "^0.4.5",
    "rcedit": "^0.9.0"
  },
  "build": {
    "copyright": "Â© 2017, MaidSafe.net Ltd",
    "npmRebuild": true,
    "asar": false,
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 220,
          "type": "file",
          "path": "dist/mac/Beaker Browser.app"
        },
        {
          "x": 50,
          "y": 400,
          "path": ".background"
        },
        {
          "x": 150,
          "y": 400,
          "path": ".DS_Store"
        },
        {
          "x": 250,
          "y": 400,
          "path": ".Trashes"
        },
        {
          "x": 350,
          "y": 400,
          "path": ".VolumeIcon.icns"
        }
      ]
    },
    "protocols": {
      "name": "SAFE Network URL",
      "schemes": [
        "safe",
        "safe-auth"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "freebsd"
      ],
      "category": "WebBrowser"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "perMachine": true
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity"
    }
  },
  "scripts": {
    "postinstall": "cd app && yarn install && cd .. && yarn package",
    "build": "gulp build",
    "build-safe-app": "cd ./app/node_modules/beaker-plugin-safe-app && npm i && npm run build",
    "burnthemall": "rm -Rf ./node_modules ./app/node_modules && yarn install --force && yarn run pack-authenticator && yarn run build && yarn run package",
    "package": "node ./scripts/main.js --package",
    "start": "gulp start",
    "watch": "NODE_ENV=development gulp start-watch",
    "pack-authenticator:unix": "sh ./scripts/pack_authenticator.sh",
    "pack-authenticator:windows": "powershell.exe -ExecutionPolicy Bypass -File \".\\scripts\\pack_authenticator.ps1\"",
    "pack-authenticator": "node ./scripts/main.js --authenticator"
  },
  "dependencies": {
    "fs-extra": "^3.0.1",
    "rollup-plugin-async": "^1.1.0"
  }
}
